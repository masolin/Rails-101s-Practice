<div class="container">
  <h1>Welcome to rails 101s practice</h1>
  <%= link_to "New Group", new_group_path, class: "btn btn-primary pull-right" %>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
      </tr>
    </thead>

    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td><%= link_to group.title, group_path(group) %></td>
          <td><%= group.description %></td>
          <% if has_joined?(group) %>
            <td><%= link_to "Edit", edit_group_path(group) %></td>
            <td><%= link_to "Delete", group_path(group), method: :delete, data: { confirm: "Are you sure?" } %></td>
          <% else %>
            <td colspan="2"></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
